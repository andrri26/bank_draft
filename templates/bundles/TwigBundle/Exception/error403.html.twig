        <div class="error mx-auto" data-text="403">{{ title }}</div>
        <p class="lead text-gray-800 mb-5">{% trans %}Forbidden{% endtrans %}</p>
        <p class="text-gray-500 mb-0">{% trans %}It looks like you found a glitch in the matrix...{% endtrans %}</p>
        <a href="{{ path('app') }}">{% trans %}← Back to Dashboard{% endtrans %}</a>
    </div>
{% endblock %}