<!-- Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{% trans %}Are you sure ?{% endtrans %}</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">{% trans %}Are you sure you want to delete this item ?{% endtrans %}</div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
                <form method="post" action="{{ path('cheque_delete', {'id': cheque.id}) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cheque.id) }}">
                    <button class="btn btn-danger">{% trans %}Delete{% endtrans %}</button>
                </form>
            </div>
        </div>
    </div>
</div>


